{
	"version": 3,
	"configurePresets": [
		{
			"name": "gcc-base",
			"hidden": true,
			"generator": "Ninja",
			"environment": {
				"NINJA_STATUS": "%e [%f/%t] "
			},
			"vendor": {
				"jetbrains.com/clion": {
				  "toolchain": "MSYS2-MinGW64"
				}
			}
		},
		{
			"name": "gcc-debug",
			"inherits": "gcc-base",
			"binaryDir": "${sourceDir}/build/debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "debug",
				"MY_PROJECT_SKIP_EXTERNAL_CONFIGURES": "true",
				"MY_PROJECT_FORCE_COLORED_OUTPUT": "true",
				"MY_PROJECT_ALTERNATIVE_LINKER": "lld"
			}
		},
		{
			"name": "gcc-dev",
			"inherits": "gcc-base",
			"binaryDir": "${sourceDir}/build/dev",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "dev",
				"MY_PROJECT_SKIP_EXTERNAL_CONFIGURES": "true",
				"MY_PROJECT_FORCE_COLORED_OUTPUT": "true",
				"MY_PROJECT_ALTERNATIVE_LINKER": "lld"
			}
		},
		{
			"name": "gcc-release",
			"inherits": "gcc-base",
			"binaryDir": "${sourceDir}/build/release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "release",
				"MY_PROJECT_SKIP_EXTERNAL_CONFIGURES": "false",
				"MY_PROJECT_FORCE_COLORED_OUTPUT": "true",
				"MY_PROJECT_ENABLE_IPO": "true"
			}
		},
		{
			"name": "gcc-package",
			"inherits": "gcc-base",
			"binaryDir": "${sourceDir}/build/package",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "package",
				"MY_PROJECT_SKIP_EXTERNAL_CONFIGURES": "true",
				"MY_PROJECT_FORCE_COLORED_OUTPUT": "true",
				"MY_PROJECT_ENABLE_IPO": "true"
			}
		}
	]
}
